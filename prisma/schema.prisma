datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String   // ðŸ‘ˆ full name bhi rakho
  email     String   @unique
  password  String   // ðŸ‘ˆ hashed password
  role      Role     @default(USER)
  courses   Course[] // ðŸ‘ˆ ek user ke multiple courses ho sakte hain
  createdAt DateTime @default(now())
}

model Course {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  userId      Int      // ðŸ‘ˆ kisne banaya (foreign key to User)
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}

enum Role {
  ADMIN
  USER
}
